{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "semantic-deployment-app",
  "version": "../package.json",
  "identifier": "com.semantic-deployment-app.app",
  "build": {
    "beforeDevCommand": "npm run start",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist/semantic-deployment-app/browser"
  },
  "app": {
    "windows": [
      {
        "title": "semantic-deployment-app",
        "width": 1280,
        "height": 768,
        "center": true,
        "focus": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "nsis",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQwMUJDNjVBODM1QUIwNkUKUldSdXNGcURXc1liUUFqa1gwdTdSRWgzQVdkejBSSUxKRWpiMnNHR0Y5bjgvNmFHeUNvd3Zic3QK",
      "endpoints": [
        "https://github.com/francois-smith/Semantic-Test-App/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "basicUi"
      }
    }
  }
}
